<div class="login-page">
  <div class="session-login-box">
    <div class='session-logo'>
      <%= link_to image_tag("logo.png", class:"session-logo-icon"), "/" %>
      <%= link_to "therapistalk", "/", class: "session-logo-text" %>
    </div>

    <h2>ログイン</h2>

    <div class="login-field">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"session-input" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"session-input"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :次回から入力を省略 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  
    <%= render "devise/shared/links" %>
  </div>
</div>
