<div class="signup-page">  
  <div class="signup-login-box">
    <div class='signup-logo'>
      <%= link_to image_tag("logo.png", class:"signup-logo-icon"), "/" %>
      <%= link_to "therapistalk", "/", class: "signup-logo-text" %>
    </div>
    
    <h2>新規登録</h2>

    <div class="login-field">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class='form-text-wrap'>
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :nickname, autofocus: true, class:"nickname", id:"nickname" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class='form-text-wrap'>
          <%= f.label :職業 %><br />
          <%= f.text_field :job, class:"job", id:"job" %>
        </div>

        <div class='form-text-wrap'>
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :description, class:"description", id:"description" %>
        </div>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
