<%= render "shared/header" %>

<%# 投稿内容編集 %>
  <div class="talks-edit">


    <%= form_with model: @talk, url: talk_path(@talk), local: true do |f|%>
      <%= render 'shared/error_messages', model: @talk %>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :タイトル %>
        </div>
        <div class='field-input'>
          <%= f.text_field :title, autofocus: true %>
        </div>
      </div>

      <div class='field'>
        <div class='field-label'>
          <%= f.label :相談内容 %>
        </div>
        <div class='field-input'>
          <%= f.text_area :content %>
        </div>
      </div>

      <div class='actions'>
        <%= f.submit "保存", class: 'talks-edit' %>
      </div>

    <% end %>


  </div>