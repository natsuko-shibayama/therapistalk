<%= render "shared/header" %>

<%# 投稿内容編集 %>
  <div class="talks-edit">

    <div class="talks-edit-wrapper">
      <%= form_with model: @talk, url: talk_path(@talk), local: true do |f|%>
        <%= render 'shared/error_messages', model: @talk %>
        <div class='talks-edit-field'>
          <div class='talks-edit-field-label'>
            <%= f.label :タイトル %>
          </div>
          <div class='talks-edit-field-input'>
            <%= f.text_field :title, autofocus: true %>
          </div>
        </div>

        <div class='talks-edit-field'>
          <div class='talks-edit-field-label'>
            <%= f.label :相談内容 %>
          </div>
          <div class='talks-edit-field-input'>
            <%= f.text_area :content, class: 'talks-edit-input' %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "保存", class: 'talks-edit-btn' %>
        </div>

      <% end %>

    </div>
  </div>

  <%= render "shared/footer" %>