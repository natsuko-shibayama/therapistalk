<%= render "shared/header" %>

<%# 相談新規投稿画面 %>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>新規投稿</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @talk, url: talks_path, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :タイトル %>
          </div>
          <div class='field-input'>
            <%= f.text_field :title, autofocus: true %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :相談内容 %>
          </div>
          <div class='field-input'>
            <%= f.text_area :content %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "投稿", class: 'user-create' %>
        </div>

      <% end %>
    </div>
  </div>