<%= render "shared/header" %>

  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>編集</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: "/users/#{@user.id}", local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :ニックネーム %>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true %>
          </div>
        </div>
        
        <div class='field'>
          <div class='field-label'>
            <%= f.label :職業 %>
          </div>
          <div class='field-input'>
            <%= f.text_field :job %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :自己紹介 %>
          </div>
          <div class='field-input'>
            <%= f.text_area :description %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "保存", class: 'user-update' %>
        </div>
      <% end %>
    </div>
  </div>
