<%= render "shared/header" %>

<div class='users-edit'>
  <div class='users-edit-wrapper'>
    <h2>編集</h2>
  </div>
  <div class='users-edit-form'>
    <%= form_with model: @user, url: "/users/#{@user.id}", local: true do |f|%>
      <div class='users-edit-field'>
        <div class='users-edit-field-label'>
          <%= f.label :ニックネーム %>
        </div>
        <div class='users-edit-field-input'>
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      
      <div class='users-edit-field'>
        <div class='users-edit-field-label'>
          <%= f.label :職業 %>
        </div>
        <div class='users-edit-field-input'>
          <%= f.text_field :job %>
        </div>
      </div>

      <div class='users-edit-field'>
        <div class='users-edit-field-label'>
          <%= f.label :自己紹介 %>
        </div>
        <div class='users-edit-field-input'>
          <%= f.text_area :description , class: 'user-edit-input'%>
        </div>
      </div>

      <div class='actions'>
        <%= f.submit "保存", class: 'user-update' %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
